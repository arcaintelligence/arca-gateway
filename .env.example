# ARCA Intelligence Platform - Environment Variables
# Copy this file to .env and fill in the values

# ============================================
# SHARED (Must be identical in Gateway and Core)
# ============================================
JWT_SECRET=your-super-secret-key-change-in-production

# ============================================
# GATEWAY (Go/Fiber)
# ============================================
GATEWAY_PORT=8080
GATEWAY_ENV=staging
MCP_CORE_URL=http://localhost:8001

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60

# ============================================
# CORE PYTHON (FastAPI)
# ============================================
CORE_PORT=8001
CORE_ENV=staging

# IntelX API (Leak Detection)
INTELX_API_KEY=your-intelx-api-key

# OpenAI (AI Agents)
OPENAI_API_KEY=sk-your-openai-key

# Database (Optional - currently uses in-memory)
DATABASE_URL=postgresql://user:password@localhost:5432/arca

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
LOG_FILE=/var/log/arca/app.log
